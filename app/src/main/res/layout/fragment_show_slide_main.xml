<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aitext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="88dp"
                android:text="@string/ai_based_symptoms_check_for_covid19"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/bodypainicon"
                android:layout_width="59dp"
                android:layout_height="78dp"
                android:layout_marginTop="36dp"
                android:contentDescription="TODO"
                app:srcCompat="@mipmap/aisymp" />

            <ImageButton
                android:id="@+id/questionaireclicked"
                android:layout_width="352dp"
                android:layout_height="69dp"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:contentDescription="TODO"
                android:focusable="true"
                app:srcCompat="@mipmap/startquestion" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/aitext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/know_if_you_have_met_a_covid_ve_person"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/iconlocateinfo"
                android:layout_width="114dp"
                android:layout_height="97dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/todo"
                app:srcCompat="@mipmap/iconlocate" />

            <ImageButton
                android:id="@+id/interesectcalculator"
                android:layout_width="351dp"
                android:layout_height="69dp"
                android:layout_marginTop="20dp"
                android:contentDescription="TODO"
                app:srcCompat="@mipmap/interseccalci" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>