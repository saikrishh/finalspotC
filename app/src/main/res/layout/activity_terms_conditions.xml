<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TermsConditionsActivity"
    android:background="@color/app_background">

    <include layout="@layout/app_bar_main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:paddingBottom="20dp"
        android:layout_below="@+id/toolbar"
        android:padding="@dimen/padding_32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <simplifii.framework.widgets.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_conditions"
                android:textColor="@color/clr_blue_accent"
                android:textSize="@dimen/txt_l"
                android:layout_marginBottom="@dimen/margin_32dp"/>

            <simplifii.framework.widgets.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="activity terms and conditions"
                android:textColor="@color/clr_blue_accent"
                android:textSize="@dimen/txt_m"/>

        </LinearLayout>

    </ScrollView>




</RelativeLayout>