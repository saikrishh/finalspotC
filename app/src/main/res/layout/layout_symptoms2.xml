<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_background"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_20">

            <simplifii.framework.widgets.CustomFontTextView
                android:id="@+id/tv_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tell_symptoms"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="340dp"
                android:layout_height="340dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="TODO"
                android:src="@mipmap/aisymp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_24dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Do you have cough?" />

                <RadioGroup
                    style="@style/match_wrap"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light_1" />

                    <RadioButton
                        style="@style/wrap_wrap"
                        android:checked="true"
                        android:text="Yes" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light_1" />

                    <RadioButton
                        android:id="@+id/radioMrs"
                        style="@style/wrap_wrap"
                        android:text="@string/no" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light_1" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If yes, then select one of the following" />

                <RadioGroup
                    style="@style/match_wrap"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light_1" />

                    <RadioButton
                        style="@style/wrap_wrap"
                        android:checked="true"
                        android:text="Dry Cough" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light_1" />

                    <RadioButton
                        style="@style/wrap_wrap"
                        android:text="Cough with sputum" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light_1" />

                    <RadioButton
                        style="@style/wrap_wrap"
                        android:text="Cough with chest pain" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light_1" />

                    <RadioButton
                        style="@style/wrap_wrap"
                        android:text="Cough with abdominal pain" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light_1" />

                    <RadioButton
                        style="@style/wrap_wrap"
                        android:text="Cough with blood in it" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light_1" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>