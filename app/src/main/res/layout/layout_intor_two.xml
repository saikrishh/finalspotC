<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TermsConditionsActivity"
    android:background="@color/app_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:padding="@dimen/padding_32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <ImageView
                android:layout_width="@dimen/width_200dp"
                android:layout_height="@dimen/height_200dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/heatmap"/>

            <simplifii.framework.widgets.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lAYOUT_INTRO_TWO ..TEXT AREA FOR INSTRUCTIONS"
                android:textColor="@color/clr_blue_accent"
                android:textSize="@dimen/txt_m"/>

        </LinearLayout>

    </ScrollView>




</RelativeLayout>