<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TermsConditionsActivity"
    android:background="@color/app_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:padding="@dimen/padding_32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="@dimen/width_200dp"
                android:layout_height="@dimen/height_200dp"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:src="@mipmap/termsdoc"/>

            <simplifii.framework.widgets.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/introtwo"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14"/>

        </LinearLayout>

    </ScrollView>




</RelativeLayout>